        <form action="/api/update/<%= item.itemID %>" class="form-horizontal form" role="form" method="post">
            <div class="row item-info">
                <div class="col-sm-4 col-md-3 panel basic-info-panel">
                    <div class="item-img">
                        <img id="display-item" src="https://d24uwljj8haz6q.cloudfront.net/<%= item.imageLocation %>" onerror="handleBrokenImage(this);">
                    </div>
                    <div class="item-basic-info">
                        <div class="info-text info-display">
                            <h2><%= item.title %></h2>
                            <p><%= item.description %></p>
                        </div>
                        <div class="info-text info-edit hidden">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <input type="text" class="input-txt name-input" name="title" maxlength="50" autocomplete="off" value="<%= item.title %>" required>
                            <textarea type="text" class="input-txt description-input" name="description"  maxlength="50" autocomplete="off" required><%= item.description %></textarea>
                        </div>
                        <% if (!mine) { %>
                            <div class="info-button want-button">
                                <% if (!loggedIn && !expired && item.takerID === null) { %>
                                    <a href="/login" class="btn btn-lg btn-want btn-block"><span class="glyphicon glyphicon-gift"></span> Login to want</a>
                                <% } else if (item.meWant === 1 && !expired && item.takerID === null) { %>
                                    <a class="btn btn-lg btn-block btn-unwant unsnag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Unwant </span><span class="badge"><%= item.numWants %></span> </a>
                                <% } else if (!expired && item.takerID === null) { %>
                                    <a class="btn btn-lg btn-block btn-want snag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Want </span><span class="badge"><%= item.numWants %></span> </a>
                                <% } else if (loggedIn && item.takerID === id) { %>
                                    <a class="btn btn-lg btn-block btn-donate"><i class="fa fa-heart-o"></i> Donate!</a>
                                <% } %>
                                <!-- TODO: the button below will appear when receiver is accepted (current userId = item.takerID) -->

                            </div>
                            <div class="info-button donate-button">

                            </div>
                        <% } else { %>
                            <div class="info-button modify-button">
                                <a href="#" class="btn btn-lg btn-modify btn-block">Modify</a>
                                <!-- TODO: make it a valid delete button -->
                                <a href="#" class="btn btn-lg btn-delete btn-block">Delete</a>
                            </div>
                            <div class="info-button edit-button-group hidden">
                                <!-- TODO: make it a valid submit button -->
                                <a href="#" class="btn btn-lg btn-save btn-block">Save</a>
                                <a href="#" class="btn btn-lg btn-cancel btn-block">Cancel</a>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-sm-8 col-md-9 right-panel">
                    <div class="panel other-info-panel">
                        <div class="giver-info">
                            <div class="giver-img pull-left">
                                <img src="http://graph.facebook.com/<%= item.fbID %>/picture?type=large" alt="" />
                            </div>
                            <a href="/profile/<%= item.giverID %>" class="giver-name"><%= item.name %></a>

                            <% if (loggedIn && mine && item.takerID === null) { %>                                
                                <br>
                                <a type="button" class="btn dropdown-toggle view-wanter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Wanters <span class="badge"><%= item.numWants %></span>
                                </a>
                                <% if (item.numWants > 0) { %>
                                    <ul class="dropdown-menu scrollable-menu" role="menu">
                                        <li><a href="/api/give/<%= item.itemID %>" style="padding-left: 10px;">Random draw</a></li>
                                        <% for (var i=0; i<manual.length; i++) { %>
                                            <li class="single-wanter">
                                                <p><%= manual[i].name %></p>
                                                <div class="link-box">
                                                    <a href="/profile/<%= manual[i].userID %>">Profile</a>
                                                    <a href="/api/give/<%= item.itemID %>/<%= manual[i].userID %>">Give</a>
                                                </div>
                                            </li>
                                        <% } %>
                                    </ul>
                                <% } %>
                            <% } else if (loggedIn && (item.takerID === null || item.takerID === id)) { %>
                                <div>
                                    <a href="javascript:messageUser();" class="btn btn-xs message-button" id="facebook-message" style="margin-bottom: 10px;"><i class="fa fa-facebook-official" aria-hidden="true"></i> Message Giver</a>
                                    <% if (item.takerID === id) { %>
                                        <a href="javascript:shareItem();" class="btn btn-xs share-button" id="facebook-share" style="margin-bottom: 10px;"><i class="fa fa-share-alt-square" aria-hidden="true"></i> Share</a><br>
                                    <% } %>
                                </div>
                                <% if (item.takerID === id) { %>
                                    <fieldset class="rating" style="color: white; font-weight: bold; text-align: center;" itemId="<%= item.itemID %>" >
                                        <input class="ratingForGiver" type="radio" id="star5" name="rating" value="10" <% if (item.giverRating === 10) { %>checked="checked" <% } %> /><label class = "full" for="star5" title="5 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star4half" name="rating" value="9" <% if (item.giverRating === 9) { %>checked="checked" <% } %> /><label class="half" for="star4half" title="4.5 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star4" name="rating" value="8" <% if (item.giverRating === 8) { %>checked="checked" <% } %> /><label class = "full" for="star4" title="4 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star3half" name="rating" value="7" <% if (item.giverRating === 7) { %>checked="checked" <% } %> /><label class="half" for="star3half" title="3.5 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star3" name="rating" value="6" <% if (item.giverRating === 6) { %>checked="checked" <% } %> /><label class = "full" for="star3" title="3 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star2half" name="rating" value="5" <% if (item.giverRating === 5) { %>checked="checked" <% } %> /><label class="half" for="star2half" title="2.5 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star2" name="rating" value="4" <% if (item.giverRating === 4) { %>checked="checked" <% } %> /><label class = "full" for="star2" title="2 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star1half" name="rating" value="3" <% if (item.giverRating === 3) { %>checked="checked" <% } %> /><label class="half" for="star1half" title="1.5 stars"></label>
                                        <input class="ratingForGiver" type="radio" id="star1" name="rating" value="2" <% if (item.giverRating === 2) { %>checked="checked" <% } %> /><label class = "full" for="star1" title="1 star"></label>
                                        <input class="ratingForGiver" type="radio" id="starhalf" name="rating" value="1" <% if (item.giverRating === 1) { %>checked="checked" <% } %> /><label class="half" for="starhalf" title="0.5 stars"></label>
                                    </fieldset>

                                <% } %>
                            <% } else if (loggedIn && item.giverID === id && item.takerID !== null) { %>
                                <div>
                                    <a href="javascript:messageUser();" class="btn btn-xs btn-primary message-button" id="facebook-message" style="margin-bottom: 10px;"><i class="fa fa-facebook-official" aria-hidden="true"></i> Message Recipient</a>
                                </div>
                                <fieldset class="rating" style="color: white; font-weight: bold; text-align: center;" itemId="<%= item.itemID %>">
                                    <input class="ratingForTaker" type="radio" id="star5" name="rating" value="10" <% if (item.takerRating === 10) { %>checked="checked" <% } %> /><label class = "full" for="star5" title="5 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star4half" name="rating" value="9" <% if (item.takerRating === 9) { %>checked="checked" <% } %> /><label class="half" for="star4half" title="4.5 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star4" name="rating" value="8" <% if (item.takerRating === 8) { %>checked="checked" <% } %> /><label class = "full" for="star4" title="4 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star3half" name="rating" value="7" <% if (item.takerRating === 7) { %>checked="checked" <% } %> /><label class="half" for="star3half" title="3.5 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star3" name="rating" value="6" <% if (item.takerRating === 6) { %>checked="checked" <% } %> /><label class = "full" for="star3" title="3 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star2half" name="rating" value="5" <% if (item.takerRating === 5) { %>checked="checked" <% } %> /><label class="half" for="star2half" title="2.5 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star2" name="rating" value="4" <% if (item.takerRating === 4) { %>checked="checked" <% } %> /><label class = "full" for="star2" title="2 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star1half" name="rating" value="3" <% if (item.takerRating === 3) { %>checked="checked" <% } %> /><label class="half" for="star1half" title="1.5 stars"></label>
                                    <input class="ratingForTaker" type="radio" id="star1" name="rating" value="2" <% if (item.takerRating === 2) { %>checked="checked" <% } %> /><label class = "full" for="star1" title="1 star"></label>
                                    <input class="ratingForTaker" type="radio" id="starhalf" name="rating" value="1" <% if (item.takerRating === 1) { %>checked="checked" <% } %> /><label class="half" for="starhalf" title="0.5 stars"></label>
                                </fieldset>
                                <% if (item.takerRating === null) { %>
                                    <div style="margin-top: 40px;" class="ratingText">
                                        Please give a rating to your recipient.
                                    </div>
                                <% } else { %>
                                    <div style="margin-top: 40px;" class="ratingText">
                                        Thanks for giving a rating!
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <div class="detail-info">

                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="col-xs-12 text-center" style="padding-bottom: 10px;">
                <small><a href="mailto:giveforfreefeedback@gmail.com"><i class="fa fa-envelope"></i> giveforfreefeedback@gmail.com</a></small>
                <br>
                <small><a href="/privacy"><i class="fa fa-eye"></i> Privacy Clause</a></small>
            </div>
            <div class="col-xs-12 text-center">
                <small class="col-xs-12 text-muted copyright">Copyright &copy; Give For Free 2016 </small>
            </div>
        </div>
    </footer>

