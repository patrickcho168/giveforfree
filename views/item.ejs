    <!-- Start of Page Content -->
    <div class="main-container">
        <div class="row panel" style="padding-top: 20px;">
            <ul class="progress-indicator">
                <li
                    <% if (item.takerID !== null || mine && manual.length > 0 || !mine && item.meWant === 1) { %>
                        class="completed"
                    <% } else { %>
                        class="active"
                    <% } %>
                    id="progress-want"
                >
                    <span class="bubble"></span>
                    <h6>Want</h6>
                </li>
                <li
                    <% if (item.takerID !== null) { %>
                        class="completed"
                    <% } else if (mine && manual.length > 0 || !mine && item.meWant === 1) { %>
                        class="active"
                    <% } %>
                    id="progress-give"
                >
                    <span class="bubble"></span>
                    <h6>Give</h6>
                </li>
                <li
                    <% if (item.takerID !== null && item.donatedAmount >= item.donationAmount) { %>
                        class="completed"
                    <% } else if (item.takerID !== null) { %>
                        class="active"
                    <% } %>
                    id="progress-donate"
                >
                    <span class="bubble"></span>
                    <h6>Donate</h6>
                </li>
                <li
                    <% if (item.takerID !== null && item.donatedAmount >= item.donationAmount && item.delivered) { %>
                        class="completed"
                    <% } else if (item.takerID !== null && item.donatedAmount >= item.donationAmount) { %>
                        class="active"
                    <% } %>
                    id="progress-deliver"
                >
                    <span class="bubble"></span>
                    <h6>Deliver</h6>
                </li>
            </ul>
        </div>
        <form action="/api/update/<%= item.itemID %>" class="form-horizontal form eidt-item-form" role="form" method="post" novalidate>
            <div class="row item-info">
                <div class="col-sm-4 col-md-3 panel basic-info-panel">
                    <div class="item-img">
                        <img id="display-item" src="https://d24uwljj8haz6q.cloudfront.net/<%= item.imageLocation %>" onerror="handleBrokenImage(this);">
                    </div>
                    <div class="item-basic-info">
                        <div class="info-text info-display">
                            <h2><%- item.title %></h2>
                            <p>Get for FREE with $ <%= item.donationAmount %> donation</p>
                            <div class="category-holder info-display">
                                <% for (var i=0; i<categories.length; i++) { %>
                                    <span class="category-item"><i class="fa fa-tags"></i> <%= categories[i] %></span>
                                <% } %>
                            </div>
                        </div>
                        <div class="info-text info-edit field-for-name hidden">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <input type="text" class="input-txt name-input" name="title" maxlength="50" autocomplete="off" value="<%- item.title %>" data-validation="required">
                        </div>

                        <% if (loggedIn && !mine && (item.takerID === null || item.takerID === id)) { %>
                            <div class="message-giver info-display">
                                <a href="javascript:messageUser('<%- item.fbID %>');" class="btn btn-xs message-button" id="facebook-message" style="margin-bottom: 10px;"><i class="fa fa-facebook-official" aria-hidden="true"></i> Message Giver</a>
                                <% if (item.takerID === id) { %>
                                    <a href="javascript:shareReceiveItem();" class="btn btn-xs share-button" id="facebook-receive-share" style="margin-bottom: 10px;"><i class="fa fa-share-alt-square" aria-hidden="true"></i> Share</a><br>
                                <% } else { %>
                                    <a href="javascript:shareItem();" class="btn btn-xs share-button" id="facebook-share" style="margin-bottom: 10px;"><i class="fa fa-share-alt-square" aria-hidden="true"></i> Share</a><br>
                                <% } %>
                            </div>
                        <% } else if (loggedIn && mine && item.takerID !== null) { %>
                            <div class="message-giver info-display">
                                <a href="javascript:messageUser('<%- item.takerFbID %>');" class="btn btn-xs message-button" id="facebook-message" style="margin-bottom: 10px;"><i class="fa fa-facebook-official" aria-hidden="true"></i> Message Donor</a>
                                <a href="javascript:shareGiveItem();" class="btn btn-xs share-button" id="facebook-give-share" style="margin-bottom: 10px;"><i class="fa fa-share-alt-square" aria-hidden="true"></i> Share</a><br>
                            </div>
                        <% } else if (loggedIn && mine) { %>
                            <div class="message-giver info-display">
                                <a href="javascript:shareGiveItem();" class="btn btn-xs share-button" id="facebook-give-share" style="margin-bottom: 10px;"><i class="fa fa-share-alt-square" aria-hidden="true"></i> Share</a><br>
                            </div>
                        <% } %>
                        <% if (!mine) { %>
                            <div class="info-button want-button">
                                <% if (!loggedIn) { %>
                                    <% if (!expired && item.takerID === null) { %>
                                        <a href="/login" class="btn btn-lg btn-want btn-want-no-login btn-block"><span class="glyphicon glyphicon-gift"></span><span> Want </span><span class="badge"><%= item.numWants %></span> </a>
                                    <% } else if (item.takerID !== null) { %>
                                        <!-- <a href="/profile/<%= item.takerID %>" class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Given to <%= item.takerName %></a> -->
                                    <% } else if (expired && item.takerID === null) { %>
                                        <!-- <div class="btn-lg btn-expired btn-block"><i class="fa fa-heart-o"></i> Gift has expired</div> -->
                                    <% } %>
                                <% } else { %>
                                    <% if (item.takerID === id) { %>
                                        <% if (item.donatedAmount === null || item.donatedAmount < item.donationAmount) { %>
                                            <a class="btn btn-lg btn-block btn-donate" id="paypal" itemId="<%= item.itemID %>" price="<%= item.donationAmount %>" charityName="<%= item.charityName %>" charityEmail="<%= item.charityEmail %>" charityID="<%= item.charityID %>"><i class="fa fa-heart-o"></i> Donate to receive gift</a>
                                            <a class="btn btn-lg btn-block btn-donated hidden" id="delivered" itemId="<%= item.itemID %>"><i class="fa fa-heart-o"></i> Confirm Gift Delivery</a>
                                        <% } else if (!item.delivered) { %>
                                            <a class="btn btn-lg btn-block btn-donated" id="delivered" itemId="<%= item.itemID %>"><i class="fa fa-heart-o"></i> Confirm Gift Delivery</a>
                                        <% } %>
                                    <% } else if (item.takerID !== null) { %>
                                        <!-- <a href="/profile/<%= item.takerID %>" class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Given to <%= item.takerName %></a> -->
                                    <% } else if (item.meWant === 1 && !expired) { %>
                                        <a class="btn btn-lg btn-block btn-unwant unsnag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Unwant </span><span class="badge"><%= item.numWants %> <% if (item.numWants == 1) { %>wanter<% } else { %>wanters<% } %></span></a>
                                    <% } else if (!expired) { %>
                                        <a class="btn btn-lg btn-block btn-want snag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Want </span><span class="badge"><%= item.numWants %> <% if (item.numWants == 1) { %>wanter<% } else { %>wanters<% } %></span></a>
                                    <% } else { %>
                                        <!-- <div class="btn-lg btn-expired btn-block"><i class="fa fa-heart-o"></i> Gift has expired</div> -->
                                    <% } %>
                                <% } %>
                            </div>
