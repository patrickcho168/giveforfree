</head>

<body>

    <!-- Facebook Like -->
    <div id="fb-root"></div>

    <!-- Page Loader -->
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-fixed-top">
        <div class="navbar-header">
            <div class="navbar-brand">
                <a href="/" class="navbar-logo">
                    <img src="../images/common/gff-logo.svg" class="logo-full" alt="" />
                    <img src="../images/common/gff-logo-s.svg" class="logo-mobile" alt="" />
                </a>
            </div>

            <button type="button" class="navbar-toggle collapsed user-button" data-toggle="collapse" data-target="#nav-menu" aria-expanded="false">
                <i class="fa fa-user"></i>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="nav-menu">

            <ul class="nav navbar-nav navbar-right">
                <% if(loggedIn) { %>
                    <li id="nav-profile">
                        <a href="/profile/<%= id %>">
                            <div class="user-avatar">
                                <img src="../images/common/test-user.png" alt="" />
                                <% if (typeof notification != 'undefined' ) { %>
                                    <span class="badge"><%= notification.length %></span>
                                <% } %>
                                <!-- TODO: pass name of the giver to here -->
                                <span> <%= user.name %></span>
                            </div>
                        </a>
                    </li>
                    <li id="nav-create">
                        <a href="/upload">
                            <i class="fa fa-gift" aria-hidden="true"></i> Give
                        </a>
                    </li>
                    <li id="nav-feed">
                        <a href="/">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i> Feed
                        </a>
                    </li>
                    <li id="nav-logout">
                        <a href="/logout">Log out</a>
                    </li>
                <%  } else { %>
                    <li id="nav-feed">
                        <a href="/">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i> Feed
                        </a>
                    </li>
                    <li id="nav-logout">
                        <a href="javascript:loginSpecial();">Log in</a>
                    </li>
                <% } %>
            </ul>
        </div>
        <!-- Menu -->

    </nav>

    <!-- Start of Page Content -->
    <div class="main-container">

        <!-- Message Flashing -->
        <!-- Errors -->
        <!-- <% if (locals.error_messages) {
            error_messages.forEach(function(message) { %>
            <div class="alert alert-warning"><strong>Uh-oh! </strong>
                <%= message %>
            </div>
            <% });
        } %>
        <% if (locals.success_messages) {
            success_messages.forEach(function(message) { %>
            <div class="alert alert-success"><strong>Awesome! </strong>
                <%= message %>
            </div>
            <% });

        } %> -->
        <form action="/api/update/<%= item.itemID %>" class="form-horizontal form" role="form" method="post">
            <div class="row item-info">
                <div class="col-sm-4 col-md-3 panel basic-info-panel">
                    <div class="item-img">
                        <img id="display-item" src="https://d24uwljj8haz6q.cloudfront.net/<%= item.imageLocation %>" onerror="handleBrokenImage(this);">
                    </div>
                    <div class="item-basic-info">
                        <div class="info-text info-display">
                            <h2><%= item.title %></h2>
                            <p>Donation amount: $ <%= item.donationAmount %></p>
                        </div>
                        <% if (!mine) { %>
                            <div class="info-button want-button">
                                <% if (!loggedIn) { %>
                                    <% if (!expired && item.takerID === null) { %>
                                        <a href="/login" class="btn btn-lg btn-want btn-block"><span class="glyphicon glyphicon-gift"></span> Login to want</a>
                                    <% } else if (item.takerID !== null) { %>
                                        <a href="/profile/<%= item.takerID %>" class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Given to <%= item.takerName %></a>
                                    <% } else if (expired && item.takerID === null) { %>
                                        <div class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Gift has expired</div>
                                    <% } %>
                                <% } else { %>
                                    <% if (item.takerID === id) { %>
                                        <a class="btn btn-lg btn-block btn-donate"><i class="fa fa-heart-o"></i> Donate!</a>
                                    <% } else if (item.takerID !== null) { %>
                                        <a href="/profile/<%= item.takerID %>" class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Given to <%= item.takerName %></a>
                                    <% } else if (item.meWant === 1 && !expired) { %>
                                        <a class="btn btn-lg btn-block btn-unwant unsnag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Unwant </span><span class="badge"><%= item.numWants %></span> </a>
                                    <% } else if (!expired) { %>
                                        <a class="btn btn-lg btn-block btn-want snag" itemId="<%= item.itemID %>"><span class="glyphicon glyphicon-gift"></span><span> Want </span><span class="badge"><%= item.numWants %></span> </a>
                                    <% } else { %>
                                        <div class="btn btn-lg btn-want btn-block"><i class="fa fa-heart-o"></i> Gift has expired</div>
                                    <% } %>
                                <% } %>
                            </div>
                        <% } else if (item.takerID === null) { %>
                            <div class="info-button modify-button">
                                <a href="#" class="btn btn-lg btn-block btn-modify">Modify</a>
                                <a href="/api/delete/<%= item.itemID %>" class="btn btn-lg btn-block btn-delete">Delete</a>
                            </div>
                            <div class="info-button edit-button-group hidden">
                                <button href="#" class="btn btn-lg btn-save btn-block" type="submit">Save</button>
                                <a href="#" class="btn btn-lg btn-cancel btn-block">Cancel</a>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-sm-8 col-md-9 right-panel">
                    <div class="panel other-info-panel">
                        <% if (item.donationAmount > 0) { %>
                            <div class="charity-info">
                                <div class="charity-img pull-left info-display">
                                    <img src="../images/upload/charity<%= item.charityID %>.png" alt="" />
                                </div>
                                <div class="charity-details info-display">
                                    <p>
                                        Your donation will go to
                                    </p>
                                    <h2><%= item.charityName %></h2>
                                </div>
                                <h2 class="info-edit hidden">Charity & Donation</h2>
                                <p class="subtitle info-edit hidden">
                                    Select charity and choose donation amount.
                                </p>
                                <div class="charity-selection info-edit hidden">
                                    <!-- TODO: select the initial charity here. Can just if (something) { trigger click } -->
                                    <input type="checkbox" id="red-cross" name="donateToRedCross" class="hidden">
                                    <img src="../images/upload/charity1.png" alt="" class="covered" onclick="selectCharity(this);"/>
                                    <input type="checkbox" id="cat-wel-society" name="donateToCWS" class="hidden">
                                    <img src="../images/upload/charity2.png" alt="" class="covered" onclick="selectCharity(this);"/>
                                </div>
                                <div class="money-input info-edit hidden">
                                    <i class="fa fa-usd"></i><span> SGD</span>

                                    <input type="text" class="input-txt donation-input" disabled name="donation" value="<%= item.donationAmount %>" maxlength="50" autocomplete="off" required>
                                </div>
                            </div>

                        <% } %>
                        <div class="detail-info">
                            <div class="row">
                                <div class="col-sm-6 category-info">
                                    <h2>Category</h2>
                                    <p class="subtitle">
                                        The tags on gift
                                    </p>
                                    <div class="category-holder info-display">
                                        <!-- TODO: for each category have a div here -->
                                        <% for (var i=0; i<categories.length; i++) { %>
                                            <span class="category-item"><i class="fa fa-tags"></i><%= categories[i] %></span>
                                        <% } %>
                                    </div>
                                    <select id="input-tags" name="categories[]" multiple class="categories has-options info-edit hidden" auto-complete: "off" placeholder="Select categories...">
                                        <% categories_list = [
                                            "books",
                                            "clothes",
                                            "electronics",
                                            "entertainment",
                                            "furniture",
                                            "kitchen appliances",
                                            "sports",
                                            "toys",
                                            "other"
                                        ] %>
                                        <% for(var i=0; i<categories_list.length; i++) {%>
                                            <option value="<%= categories_list[i] %>"><%= categories_list[i] %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-sm-6 deadline-info">
                                    <h2>Deadline</h2>
                                    <p class="subtitle">
                                        This giveaway ends on
                                    </p>
                                    <p class="deadline info-display"><%= date %></p>
                                    <input type="text" class="input-txt input-date info-edit hidden" name="date" id="date" value="<%= moment(date, "D MMMM YYYY HH:mm").format("YYYY-MM-DD") %>" maxlength="50" autocomplete="off" required>
                                </div>

                                <div class="col-sm-6 delivery-info">
                                    <h2>Delivery</h2>
                                    <p class="subtitle">
                                        Receiver will be receiving gift by
                                    </p>
                                    <div class="delivery-holder info-display">
                                        <% if (item.meetup === 1) { %>
                                            <span class="category-item"><i class="fa fa-child"></i>Meet Up</span>
                                        <% } %>
                                        <% if (item.postage === 1) { %>
                                            <span class="category-item"><i class="fa fa-cube"></i>Postage</span>
                                        <% } %>
                                    </div>
                                    <div class="checkbox checkbox-primary delivery-info checkbox-circle row info-edit hidden">
                                        <% if (item.meetup === 1) { %>
                                            <input type="checkbox" name="meetup" id="meetup" class="check-one hidden" checked>
                                        <% } else { %>
                                            <input type="checkbox" name="meetup" id="meetup" class="check-one hidden">
                                        <% } %>
                                        <label class="large-label" for="meetup">
                                            Meet and collect
                                        </label><br>

                                        <% if (item.postage === 1) { %>
                                            <input type="checkbox" name="postage" id="postage" class="check-two hidden" checked>
                                        <% } else { %>
                                            <input type="checkbox" name="postage" id="postage" class="check-two hidden">
                                        <% } %>
                                        <label class="large-label" for="postage">
                                            Postage service
                                        </label>
                                    </div>
                                </div>
                                <% if (!mine) { %>
                                <% } else { %>
                                    <div class="col-sm-6 mobile-button">
                                        <div class="info-button mobile-modify-button">
                                            <a href="#" class="btn btn-lg btn-block mobile-btn-modify">Modify</a>
                                            <a href="/api/delete/<%= item.itemID %>" class="btn btn-lg btn-block mobile-btn-delete">Delete</a>
                                        </div>
                                        <div class="info-button mobile-edit-button-group hidden">
                                            <button href="#" class="btn btn-lg mobile-btn-save btn-block" type="submit">Save</button>
                                            <a href="#" class="btn btn-lg mobile-btn-cancel btn-block">Cancel</a>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div class="row panel comment-panel">
            <% if (!mine && loggedIn) { %>
                <h3 class="comment-title">Curious? Comment below or <a href="javascript:messageUser();">message <%=item.name%>!<a></h3>
            <% } %>
            <div id="comments-container" style="margin-left: 15px; margin-right: 15px;">
            </div>
        </div>

    </div>
    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="col-xs-12 text-center" style="padding-bottom: 10px;">
                <small><a href="mailto:giveforfreefeedback@gmail.com"><i class="fa fa-envelope"></i> giveforfreefeedback@gmail.com</a></small>
                <br>
                <small><a href="/privacy"><i class="fa fa-eye"></i> Privacy Clause</a></small>
            </div>
            <div class="col-xs-12 text-center">
                <small class="col-xs-12 text-muted copyright">Copyright &copy; Give For Free 2016 </small>
            </div>
        </div>
    </footer>

</body>

</html>
