    <!-- Value Assignment to JS -->
    <script>
        var loggedIn = <%= loggedIn %>;
        var currentItemId = <%= item.itemID %>;
        var userId = <%= id %>;
        var userFbId = "<%= user.fbID %>";
        window.fbAsyncInit = function() {
            FB.init({
                appId: '<%= appId %>',
                xfbml: true,
                version: 'v2.7'
            });
            if (typeof facebookInit == 'function') {
                facebookInit();
            }
        };

        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {
                return;
            }
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        // function facebookInit() {
        //     if ($("#facebook-message").length) {
        //         document.getElementById('facebook-message').onclick = function() {
        //             // alert("CLICKED MESSAGE");
        //             FB.ui({
        //                 method: 'send',
        //                 link: '<%= domain %>/item/<%= item.itemID %>',
        //                 to: toId
        //             }, function(response) {});
        //         }
        //     }
        //     if ($("#facebook-share").length) {
        //         document.getElementById('facebook-share').onclick = function() {
        //             // alert("CLICKED SHARE");
        //             FB.ui({
        //                 method: 'share_open_graph',
        //                 action_type: '<%= fbNameSpace %>:receive',
        //                 action_properties: {
        //                     'free_item': '<%= domain %>/item/<%= item.itemID %>'
        //                 },
        //                 mobile_iframe: true
        //             }, function(response) {});
        //         }
        //     }
        // }

        $('#facebook-message').unbind('click').bind('click', function (e) {
            messageUser();
        });

        $('#facebook-share').unbind('click').bind('click', function (e) {
            shareItem();
        });

        function messageUser() {
                var toId = null;

                <% if (loggedIn && (item.takerID === null || item.takerID === id)) { %>
                toId = '<%= item.fbID %>';
                <% } else if (loggedIn && item.giverID === id && item.takerID !== null) { %>
                toId = '<%= item.takerFbID %>';
                <% } %>

                FB.ui({
                    method: 'send',
                    link: '<%= domain %>/item/<%= item.itemID %>',
                    to: toId
                }, function(response) {});

        }

        function shareItem() {
            // alert("CLICKED SHARE");
            FB.ui({
                method: 'share_open_graph',
                action_type: '<%= fbNameSpace %>:receive',
                action_properties: {
                    'free_item': '<%= domain %>/item/<%= item.itemID %>'
                },
                mobile_iframe: true
            }, function(response) {});
        }

    </script>

    <!-- Native Scripts -->
    <script src="../scripts/common/common.js"></script>
    <script src="../scripts/item/item.js"></script>

    <!-- Push Notifications -->
    <!-- <script src="/scripts/common/notification2.js"></script> -->

    <!-- Auto-Resize Input Fields -->
    <script src="../assets/autosize/js/autosize.js"></script>

    <!-- JQuery Comments Support -->
    <script type="text/javascript" src="../scripts/item/jquery-comments.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../styles/item/jquery-comments.css">

    <!-- Bootstrap CSS (override) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- Pure CSS (Override) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pure/0.6.0/base-context-min.css">

    <!-- Font Awesome (Override) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

    <!-- CSS Styles -->
    <link rel="stylesheet" href="../styles/common/bootstrap-edit.css">
    <link rel="stylesheet" href="../styles/common/common.css">
    <link rel="stylesheet" href="../styles/item/item.css">

    <!-- Bootstrap Notifications -->
    <link rel="stylesheet" href="../assets/bootstrapNotifications/css/bootstrap-notifications.min.css">
    <script src="../scripts/common/notify.min.js"></script>

    <!-- Selectize -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.3/js/standalone/selectize.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.3/css/selectize.default.min.css">
    <link rel="stylesheet" href="../styles/upload/selectize-mod.css">

    <!-- Animations -->
    <link rel="stylesheet" href="https://fastcdn.org/Animate.css/3.4.0/animate.min.css">

    <!-- Font Support -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Google Analytics -->
    <script src="/scripts/common/analytics.js"></script>

    <!-- Google Analytics -->
    <script src="/scripts/common/analytics.js"></script>

    <!-- Facebook Like -->
    <script>
        $(window).bind("load", function() {
            $.getScript("/scripts/common/fblike.js", function() {});
