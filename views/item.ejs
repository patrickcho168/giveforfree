    <script>
        var loggedIn = <%= loggedIn %>;
        var currentItemId = <%= item.itemID %>;
        var userId = <%= id %>;
        var userFbId;
        <% var startDate = moment(item.timeCreated, "D MMMM YYYY HH:mm").format(); %>
        <% if (loggedIn) { %>
            userFbId = "<%= user.fbID %>";
        <% } %>
        window.fbAsyncInit = function() {
            FB.init({
                appId: '<%= appId %>',
                xfbml: true,
                version: 'v2.7'
            });
            if (typeof facebookInit == 'function') {
                facebookInit();
            }
        };

        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {
                return;
            }
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        // function facebookInit() {
        //     if ($("#facebook-message").length) {
        //         document.getElementById('facebook-message').onclick = function() {
        //             // alert("CLICKED MESSAGE");
        //             FB.ui({
        //                 method: 'send',
        //                 link: '<%= domain %>/item/<%= item.itemID %>',
        //                 to: toId
        //             }, function(response) {});
        //         }
        //     }
        //     if ($("#facebook-share").length) {
        //         document.getElementById('facebook-share').onclick = function() {
        //             // alert("CLICKED SHARE");
        //             FB.ui({
        //                 method: 'share_open_graph',
        //                 action_type: '<%= fbNameSpace %>:receive',
        //                 action_properties: {
        //                     'free_item': '<%= domain %>/item/<%= item.itemID %>'
        //                 },
        //                 mobile_iframe: true
        //             }, function(response) {});
        //         }
        //     }
        // }

        $('#facebook-receive-share').unbind('click').bind('click', function (e) {
            shareReceiveItem();
        });

        $('#facebook-share').unbind('click').bind('click', function (e) {
            shareItem();
        });

        $('#facebook-give-share').unbind('click').bind('click', function (e) {
            shareGiveItem();
        });

        function messageUser(toFbId) {
            if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
                swal({
                    title: 'Oops!',
                    text: 'Messaging via Facebook only works on desktop. We are terribly sorry about the inconvenience caused.',
                });
            } else {
                swal.close();

                console.log(toFbId);
                FB.ui({
                    method: 'send',
                    link: '<%= domain %>/item/<%= item.itemID %>',
                    to: toFbId
                }, function(response) {});
            }
        }

        function shareReceiveItem() {
            // alert("CLICKED SHARE");
            FB.ui({
                method: 'share_open_graph',
                action_type: '<%= fbNameSpace %>:receive',
                action_properties: {
                    'free_item': '<%= domain %>/item/<%= item.itemID %>'
                }
            }, function(response) {});
        }

        function shareGiveItem() {

            swal.close();
            // alert("CLICKED SHARE");
            console.log('<%= startDate %>');
            <% if (item.takerID !== null) { %>
                FB.ui({
                    method: 'share_open_graph',
                    action_type: '<%= fbNameSpace %>:give',
                    action_properties: {
                        'free_item': '<%= domain %>/item/<%= item.itemID %>'
                    }
                }, function(response) {});
            <% } else { %>
                FB.ui({
                    method: 'share',
                    href: '<%= domain %>/item/<%= item.itemID %>',
                    mobile_iframe: true
                }, function(response) {});
            <% } %>
        }

        function shareItem() {
            // alert("CLICKED SHARE");
            FB.ui({
                method: 'share',
                href: '<%= domain %>/item/<%= item.itemID %>',
                mobile_iframe: true
            }, function(response) {});
        }

        $(document).ready(function() {

            // $('#facebook-message').unbind('click').bind('click', function (e) {
            //     console.log($("#facebook-message").attr("fbid"));
            //     messageUser($("#facebook-message").attr("fbid"));
            // });

            if (!<%= uploaded === undefined %>) {
                if (<%= uploaded === 'true' %>) {
                    swal({
                        title: 'Post Completed',
                        text: 'You have successfully posted an item!',
                        type: 'success',
                        showCancelButton: true,
                        cancelButtonText: 'Close',
                        confirmButtonText: 'Share on Facebook',
                        closeOnConfirm: false,
                    },
                    function(confirm) {
                        if (!confirm) {
                            window.location.href = '/item/' + currentItemId;
                        } else {
                            shareGiveItem();
                        }
                    });
                }
            }

            if (!<%= donated === undefined %>) {
                if (<%= donated === 'true' %>) {
                    swal({
                        title: 'Donation Completed',
                        text: 'You have successfully completed the donation! Message giver to discuss delivery details.',
                        type: 'success',
                        showCancelButton: true,
                        cancelButtonText: 'Close',
                        confirmButtonText: 'Message Giver',
                        closeOnConfirm: false,
                    },
                    function(confirm) {
                        if (!confirm) {
                            window.location.href = '/item/' + currentItemId;
                        } else {
                            messageUser();
                        }
                    });
                } else {
                    swal({
                        title: 'Donation Failed',
                        text: 'Something went wrong during the payment process. Try it again or contact us for help!',
                        type: 'error',
                        showCancelButton: true,
                        cancelButtonText: 'Cancel',
                        confirmButtonText: 'Try again',
                        closeOnConfirm: false,
                    },
                    function(confirm) {
                        if (!confirm) {
                            window.location.href = '/item/' + currentItemId;
                        } else {
                            $('#paypal').trigger('click');
                            swal.close();
                        }
                    });
                }
            }
        });
    </script>

