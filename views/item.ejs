                            </div>
                        <% } else { %>
                            <div class="info-button want-button">
                                <% if (item.donatedAmount === null || item.donatedAmount < item.donationAmount) { %>
                                    <!-- <div class="btn-lg btn-block btn-donated"><i class="fa fa-heart-o"></i> Waiting for Donation</div> -->
                                <% } else { %>
                                    <!-- <div class="btn-lg btn-block btn-donated"><i class="fa fa-heart-o"></i> Deliver</div> -->
                                <% } %>
                            </div>
                        <% } %>
