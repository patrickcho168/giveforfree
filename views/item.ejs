                                        <!-- TODO: select the initial charity here. Can just if (something) { trigger click } -->
                                        <script>
                                            jQuery(document).ready(function($) {
                                                $( ".charity<%= item.charityID %>" ).trigger( "click" );
                                            });
                                        </script>
                                        <input type="radio" id="red-cross" name="donateToCharity" value="1" class="hidden">
                                        <img src="../images/upload/charity1.png" alt="" class="covered charity1" onclick="selectCharity(this);"/>
                                        <input type="radio" id="cat-wel-society" name="donateToCharity" value="2" class="hidden">
                                        <img src="../images/upload/charity2.png" alt="" class="covered charity2" onclick="selectCharity(this);"/>
                                    </div>
                                </div>
                                <div class="col-sm-6 donation-edit">
                                    <h2>Donation</h2>
                                    <p class="subtitle">
                                        <span class="actual-amount">$1.4</span> goes to charity, <span class="fee">$0.58</span> goes to PayPal,
                                        <span class="ours">$0.02</span> goes to GFF.
                                    </p>
                                    <div class="money-input">
                                        <i class="fa fa-usd"></i><span> SGD</span>
                                        <input type="number" class="input-txt donation-input" disabled name="donation" value="<%= item.donationAmount %>" maxlength="50" autocomplete="off" required>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 deadline-info">
                                    <h2>Deadline</h2>
                                    <p class="subtitle">
                                        This giveaway ends on
                                    </p>
                                    <% var deadline = date != "Invalid date" ? moment(date, "D MMMM YYYY HH:mm").format("YYYY-MM-DD") : "" %>
                                    <input type="text" class="input-txt input-date" name="date" id="date" value="<%= moment(deadline).format('DD MMM YYYY') %>" placeholder="Select an end date">
                                </div>

                                <div class="col-sm-6 category-info category-select-holder">
                                    <h2>Category</h2>

                                    <p class="subtitle">
                                    Select the most appropriate category. <span class="no-category-alert hidden" style="color: #f05050;">You need to choose a category.</span>
                                    <!-- TODO: implement validation-->
                                    </p>
                                    <select id="input-tags" name="categories[]" id="category" data-validation="required">
                                        <option value="">Select a category...</option>
                                        <% categories_list = [
                                            "books",
                                            "clothes",
                                            "electronics",
                                            "entertainment",
                                            "furniture",
                                            "kitchen appliances",
                                            "sports",
                                            "toys",
                                            "other"
                                        ] %>
                                        <% for(var i=0; i<categories_list.length; i++) {%>
                                            <% if (categories.indexOf(categories_list[i]) != -1) {%>

                                            <option value="<%= categories_list[i] %>" selected="selected"><%= categories_list[i] %></option>
                                            <% } else { %>
                                            <option value="<%= categories_list[i] %>"><%= categories_list[i] %></option>
                                            <% } %>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-sm-6 delivery-info">
                                    <h2>Delivery</h2>
                                    <p class="subtitle">
                                        Receiver will be receiving gift by
                                    </p>
                                    <div class="checkbox checkbox-primary delivery-info checkbox-circle row">
                                        <% if (item.meetup === 1) { %>
                                            <input type="checkbox" name="meetup" id="meetup" class="check-one hidden" checked data-validation="required" data-validation-optional-if-answered="postage">
                                        <% } else { %>
                                            <input type="checkbox" name="meetup" id="meetup" class="check-one hidden" data-validation="required" data-validation-optional-if-answered="postage">
                                        <% } %>
                                        <label class="large-label" for="meetup">
                                            Meet and collect
                                        </label><br>

                                        <% if (item.postage === 1) { %>
                                            <input type="checkbox" name="postage" id="postage" class="check-two hidden" checked data-validation="required" data-validation-optional-if-answered="meetup">
                                        <% } else { %>
                                            <input type="checkbox" name="postage" id="postage" class="check-two hidden" data-validation="required" data-validation-optional-if-answered="meetup">
                                        <% } %>
                                        <label class="large-label" for="postage">
                                            Postage service
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-6 description-info">
                                    <h2>Description</h2>
                                    <p class="subtitle">
                                        Some words about the gift.
                                    </p>
                                    <div class="description-edit">
                                        <textarea type="text" class="input-txt description-input" name="description"  maxlength="200" autocomplete="off" data-validation="required"><%- item.description %></textarea>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="detail-info info-display">
                            <div class="row">
                                <div class="col-sm-6 col-md-7">
                                    <div class="description-info">
                                        <p class="subtitle">
                                            Description
                                        </p>
                                        <p class="item-description">
                                            <%- item.description %>
                                        </p>
                                    </div>
                                    <div class="deadline-info">
                                        <p class="subtitle">
                                            <% if (date == "Invalid date") { %>
                                            This giveaway has no deadline
                                            <% } else { %>
                                            This giveaway ends on
                                        </p>
                                        <p class="deadline">
                                            <%= moment(deadline).format('DD MMM YYYY') %>
                                        </p>
                                        <% } %>
                                    </div>
                                    <div class="delivery-info">
                                        <p class="subtitle">
                                            Delivery
                                        </p>
                                        <div class="delivery-holder info-display">
                                            <% if (item.meetup === 1) { %>
                                                <span class="category-item"><i class="fa fa-child"></i>Meet Up</span>
                                            <% } %>
                                            <% if (item.postage === 1) { %>
                                                <span class="category-item"><i class="fa fa-cube"></i>Postage</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-5">
                                    <h4 class="about-charity">The Charity</h4>
                                    <p class="charity-intro">
                                        <%= item.charityDescription %>
                                    </p>
                                    <h4 class="giver-info-title">The Giver</h4>
                                    <div class="giver-info">
                                        <div class="giver-img pull-left">
                                            <a href="/profile/<%= item.giverID %>">
                                                <img src="https://graph.facebook.com/<%= item.fbID %>/picture?type=large" alt="" />
                                            </a>
                                        </div>
                                        <a href="/profile/<%= item.giverID %>" class="giver-name"><%= item.name %></a>

                                        <% if (loggedIn && mine && item.takerID === null) { %>
                                            <br>

                                        <% } %>
                                    </div>
                                    <% if (item.takerID !== null) { %>
                                        <div class="taker-info">
                                            <h4 class="giver-info-title">The Donor</h4>
                                            <div class="giver-img pull-left">
                                                <img src="https://graph.facebook.com/<%= item.takerFbID %>/picture?type=large" alt="" />
                                            </div>
                                            <a href="/profile/<%= item.takerID %>" class="giver-name"><%= item.takerName %></a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% if (!mine) { %>
                        <% } else if (item.takerID === null) { %>
                            <div class="mobile-button">
                                <div class="info-button mobile-modify-button">
                                    <a href="#" class="btn btn-lg btn-block mobile-btn-modify">Modify Item</a>
                                </div>
                                <div class="info-button mobile-edit-button-group hidden">
                                    <button href="#" class="btn btn-lg mobile-btn-save btn-block" type="submit">Save Modification</button>
                                    <a href="#" class="btn btn-lg mobile-btn-cancel btn-block">Cancel Modification</a>
                                    <a onclick="deleteConfirm(<%= item.itemID %>);" class="btn btn-lg btn-block mobile-btn-delete">Delete Item</a>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </form>

        <div class="row panel" style="padding: 20px;">
            <% if (!mine) { %>
                <h3 class="comment-title">Curious? Comment below!</h3>
            <% } else { %>
                <h3 class="comment-title">Comments</h3>
            <% } %>
            <div id="comments-container" style="margin-left: 15px; margin-right: 15px;">
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="col-xs-12 text-center" style="padding-bottom: 10px;">
                <small><a href="mailto:giveforfreefeedback@gmail.com"><i class="fa fa-envelope"></i> giveforfreefeedback@gmail.com</a></small>
                <br>
                <small><a href="/tnc"><i class="fa fa-eye"></i> Privacy Clause</a></small>
            </div>
            <div class="col-xs-12 text-center">
                <small class="col-xs-12 text-muted copyright">Copyright &copy; Give For Free 2016 </small>
            </div>
        </div>
    </footer>

</body>

</html>
