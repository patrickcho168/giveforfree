                        <li id="nav-profile">
                            <a href="/profile/<%= id %>">
                                <div class="user-avatar">
                                    <img src="https://graph.facebook.com/<%= user.fbID %>/picture" alt="" />
                                    <span> <%= user.name %></span>
                                </div>
                            </a>
