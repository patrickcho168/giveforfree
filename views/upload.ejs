                        <a href="/upload">
                            <i class="fa fa-gift" aria-hidden="true"></i> Give
                        </a>
                    </li>
                    <li id="nav-feed">
                        <a href="/">
                            <i class="fa fa-rss" aria-hidden="true"></i> Feed
                        </a>
                    </li>
                    <li id="nav-profile">
                        <a href="/profile/<%= id %>">
                            <i class="fa fa-user" aria-hidden="true"></i> Profile
                        </a>
                    </li>
                    
                    <!-- Notifications -->
                    <%- include('notification'); %>
                    <!-- End Notifications -->
                    
                    <li id="nav-logout">
